.container.top-nav
	.col-xs-10.col-sm-10.col-md-10.md-layout.no-padding
		.drawer-btn
			svg(width="24px" height="24px" viewBox="0 0 48 48")
							path(d="M6 36h36v-4H6v4zm0-10h36v-4H6v4zm0-14v4h36v-4H6z")
		.yue-navbar
			span.yue-logo-title 悦读
			form(method='GET' action='/results' target='_blank' onsubmit='return check();').yue-form-search
				span.glyphicon.glyphicon-search.search-icon
				input(type="search", placeholder='搜索', name='q')
	.col-xs-2.col-sm-2.col-md-2.md-layout.no-padding
		nav.nav-group
			if user
				li.flex-box.vertical-center
					a(href="/userhome/#{user._id}").avatar
						img(src="#{user.avatar}")
				li.user-car
					.user-car-inner
						.user-car-top
							a(href="" target="")
								img(src="#{user.avatar}")
							.user-meta
								a(href="" target="")
									span.user-name #{user.name}
								br
								a(href="" target="").user-post
									span 文章数  #{writeCount}
						.user-car-footer
							a(href="/write" target="_self") 
								i.glyphicon.glyphicon-pencil
								span 写文章
							a(href="/logout" target="_self") 
								i.glyphicon.glyphicon-log-out
								span 登出
			else
				li.flex-box.vertical-center
					a#register(href="/signup" target="_blank") 注册
				li.flex-box.vertical-center
					a#login(href="/signin" target="_blank") 登录 


